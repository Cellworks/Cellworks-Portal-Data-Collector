{
	"version": "0.2.0",
	"configurations": [
        {
            "name": "Install",
            "command": "npm install",
            "request": "launch",
            "type": "node-terminal"
        },
		{
			"name": "Run Dev",
			"command": "npm run dev",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Run Dev with Debug",
			"command": "npm run dev:debug",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Build",
			"command": "npm run build",
			"request": "launch",
			"type": "node-terminal",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"showReuseMessage": false,
				"clear": true,
				"close": true
			}
		},
		{
			"name": "Run",
			"command": "npm run run",
			"request": "launch",
			"type": "node-terminal"
		}
	]
}
